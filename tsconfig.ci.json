{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "types": ["vite/client", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "vite-env.d.ts", "global.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "scripts",
    "supabase/functions/**" // 당장 문제 많으면 임시 제외
  ]
}
